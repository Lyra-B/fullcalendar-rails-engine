<p>
  <%= link_to 'Create Session', 'javascript:void()', id: 'new_session' %>
</p>
<div>
  <div class='calendar'></div>
</div>
<div id="session_desc_dialog" class="dialog" style="display:none;"></div>
<div id="create_session_dialog" class="dialog" style ="display:none;">
  <%= render 'form' %>
</div>

<script>
  $(document).ready(function(){
    $('.calendar').fullCalendar(full_calendar_options);
    // page is now ready, initialize the calendar...
    $('#new_session').click(function(session) {
      FullcalendarEngine.Form.display()
      session.preventDefault();
    });
  });
</script>
